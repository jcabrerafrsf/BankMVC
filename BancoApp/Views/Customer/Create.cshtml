</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-lg-12">
            <!-- general form elements -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Create a Customer</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form role="form" data-toggle="validator">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="box-body">

                            <div class="form-group">
                                <label for="Name">Bank</label>
                                <input type="text" class="form-control" name="Bank.Name" id="Bank.Name" value="@Model.Bank.Name" readonly>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter name" required>
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="Name">DNI</label>
                                <input type="text" class="form-control" name="DNI" id="DNI" placeholder="Enter DNI" required>
                                @Html.ValidationMessageFor(model => model.DNI, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="Name">Address</label>
                                <input type="text" class="form-control" name="Address" id="Address" placeholder="Enter Address" required>
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="Name">Phone</label>
                                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Enter Phone" required>
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="InputEmail">Email</label>
                                <input type="email" class="form-control" name="Email" id="Email" placeholder="Enter Email" required>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="Name">Customer Type</label>
                                <select class="form-control" name="CustomerType" id="CustomerType" required>
                                    <option value="NATURAL_PERSON">Persona Física</option>
                                    <option value="LEGAL_PERSON">Persona Jurídica</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.CustomerType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" value="Create" class="btn btn-github">Create</button>
                            @Html.ActionLink("Volver", "Index", "Customer", null, new { @class = "btn btn-default" })
                        </div>

                    </form>
                }
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




