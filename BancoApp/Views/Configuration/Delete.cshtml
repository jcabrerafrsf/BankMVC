@model DataLayer.Entities.AccountType

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        AccountType
        <small>Delete</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-lg-12">
            <!-- general form elements -->
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Are you sure you want to delete this?</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form role="form">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="box-body">

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" name="Name" id="Name" placeholder="@Model.Name" readonly>
                            </div>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            @Html.ActionLink("Volver", "Index", "Bank", null, new { @class = "btn btn-default" })
                        </div>

                    </form>
                }
            </div>
            <!-- /.box -->
        </div>
    </div>
    <!-- /.row -->
</section>
